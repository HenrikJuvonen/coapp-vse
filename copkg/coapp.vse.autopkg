// autopackage file for coapp.devtools
@import "outercurve.inc";

package {
    name: "CoApp.Vse";
	version: "0.1.0.0";
	architecture: "any";
    display-name: "CoApp for Visual Studio";
}

provides {
    feature: "coapp.vse" = "0.1.0.0";
}

metadata {
    summary: "Visual Studio Extension";
    
    author-version : "0.1.0.0";
    bug-tracker: "https://github.com/henjuv/coapp-vse/issues";
    stability : "-100";
}

compatability-policy {
    minimum: "0.0.0.0";
    maximum: "${OneLessThanCurrent}";
    versions : {
        "0.1.0.0",
    };
}

files[all] {
    include: {
		dlls,
		other
    };
};

files[dlls] {
    root: "..\src\VsExtension\bin\Release";
    
    include: {
        "*.dll",
    };
    
    trim-path: minimal;
};

files[other] {
    root: "..\src\VsExtension\bin\Release";
    
    include: {
		"CoApp.VisualStudio.Tools.pkgdef",
		"extension.vsixmanifest",
    };
    
    trim-path: minimal;
};

application {
    include : {
        dlls
    };
}

package-composition {
    symlinks : { 
        all => @"%appdata%\Local\Microsoft\VisualStudio\10.0\Extensions\coapp\coapp-vse\${each.Name}" = @"${packagedir}\${each.Name}";

    };
}