<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DropShadowEffect x:Key="DropShadowBrush" Direction="330" Opacity="0.4" ShadowDepth="1" BlurRadius="6"/>

    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource Gray20}"/>

    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{DynamicResource HighlightLightColor}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{DynamicResource Gray19}"/>

    <Color x:Key="Gray14">#FF707070</Color>
    <Color x:Key="Gray15">#FFf4f4f4</Color>
    <Color x:Key="Gray16">#FFbee6fd</Color>
    <Color x:Key="Gray17">#FFdddddd</Color>
    <Color x:Key="Gray18">#FF838383</Color>

    <SolidColorBrush x:Key="GrayBrush14" Color="{DynamicResource Gray14}"/>
    <SolidColorBrush x:Key="GrayBrush15" Color="{DynamicResource Gray15}"/>
    <SolidColorBrush x:Key="GrayBrush16" Color="{DynamicResource Gray16}"/>
    <SolidColorBrush x:Key="GrayBrush17" Color="{DynamicResource Gray17}"/>
    <SolidColorBrush x:Key="GrayBrush18" Color="{DynamicResource Gray18}"/>
    <SolidColorBrush x:Key="GrayBrush19" Color="{DynamicResource Gray19}"/>
    <SolidColorBrush x:Key="GrayBrush20" Color="{DynamicResource Gray20}"/>
</ResourceDictionary>