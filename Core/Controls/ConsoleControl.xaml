<UserControl
    x:Class="CoApp.VSE.Core.Controls.ConsoleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="100">
    <Grid>
        <Border BorderThickness="0,2,0,0" BorderBrush="{DynamicResource GrayBrush13}">
            <RichTextBox Name="ConsoleBox" FontFamily="Consolas" KeyUp="OnKeyUp" PreviewKeyDown="OnPreviewKeyDown" GotFocus="OnGotFocus" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0,4,0,4"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </Border>
    </Grid>
</UserControl>
