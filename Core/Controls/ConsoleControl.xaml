<UserControl
    x:Class="CoApp.VSE.Core.Controls.ConsoleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <RichTextBox Height="100" Name="ConsoleBox" FontFamily="Consolas" ScrollViewer.VerticalScrollBarVisibility="Visible" KeyUp="OnKeyUp" PreviewKeyDown="OnPreviewKeyDown" GotFocus="OnGotFocus" BorderThickness="0,2,0,0" BorderBrush="{DynamicResource GrayBrush13}">
        <RichTextBox.Resources>
            <Style TargetType="{x:Type Paragraph}">
                <Setter Property="Margin" Value="0,4,0,4"/>
            </Style>
        </RichTextBox.Resources>
    </RichTextBox>
</UserControl>
