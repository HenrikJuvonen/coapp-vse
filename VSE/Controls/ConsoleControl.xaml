<UserControl x:Class="CoApp.VSE.Controls.ConsoleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <RichTextBox Name="ConsoleBox" FontFamily="Consolas" ScrollViewer.VerticalScrollBarVisibility="Visible" KeyUp="OnKeyUp" PreviewKeyDown="OnPreviewKeyDown" GotFocus="OnGotFocus">
        <RichTextBox.Resources>
            <Style TargetType="{x:Type Paragraph}">
                <Setter Property="Margin" Value="0,8,0,8"/>
            </Style>
        </RichTextBox.Resources>
    </RichTextBox>
</UserControl>
