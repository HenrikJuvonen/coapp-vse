<self:WpfControl 
    x:Class="CoApp.VisualStudio.Options.FeedOptionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:self="clr-namespace:CoApp.VisualStudio.Options">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Available feeds:" />
            <Button Grid.Column="1" Content="Remove" Click="OnRemoveButtonClick" />
        </Grid>
        <ListBox Grid.Row="1" Name="FeedsListBox" Margin="4,4,0,4"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Location:" />
            <TextBox Grid.Column="1" Name="FeedLocation" />
            <Button Grid.Column="3" Content="Add" Click="OnAddButtonClick" />
        </Grid>
    </Grid>
</self:WpfControl>
